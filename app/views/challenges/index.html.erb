<% if current_user %>  
  <h1>Listing challenges</h1>

  <% if @challenges.size == 0 %>

    <p> You don't have any challenge added.</p>

  <% else %>
    <table class="table table-bordered">
      <tr>
        <th>Description</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.description %></td>
        <td><%= link_to 'Show', challenge %></td>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

    <br />

  <% end %>

  <%= link_to 'New Challenge', new_challenge_path, :class => 'btn btn-primary' %>
<% else %>
  <h3> You must be logged in to proceed. <h3>
<% end %>