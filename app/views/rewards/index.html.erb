<% if current_user %>
  <h1>Listing rewards</h1>

  <% if @rewards.size == 0 %>

      <p> You don't have any reward added.</p>

    <% else %>  

  <table class="table table-bordered">
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @rewards.each do |reward| %>
    <tr>
      <td><%= reward.name %></td>
      <td><%= reward.level %></td>
       <td> 
          <%= image_tag(reward.url,size: "32x20", alt: "reward_image") %>
        </td>
      <td><%= link_to 'Show', reward %></td>
      <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
      <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <% end %>
  <br />

  <%= link_to 'New Reward', new_reward_path, :class => 'btn btn-primary' %>
<% else %>
  <h3> You must be logged in to proceed. <h3>
<% end %>

